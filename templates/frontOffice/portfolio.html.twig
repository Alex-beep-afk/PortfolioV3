{% extends 'base.html.twig' %}

{% block title %}Portfolio - {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
<main class="min-h-screen" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <!-- Hero Section with Avatar -->
    <section class="relative overflow-hidden border-b border-cyan-500/30" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.2);">
        <div class="absolute inset-0 bg-gray-900/80 backdrop-blur-sm"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="flex flex-col items-center text-center">
                <!-- Avatar -->
                {% if user.avatarName %}
                <div class="mb-6">
                    <div class="relative">
                        <img 
                            src="{{ vich_uploader_asset(user, 'avatarFile') }}" 
                            alt="{{ user.firstName }} {{ user.lastName }}" 
                            class="h-32 w-32 rounded-full object-cover border-4 border-cyan-500/50"
                            style="box-shadow: 0 0 30px rgba(6, 182, 212, 0.6);"
                        />
                        <div class="absolute inset-0 rounded-full border-4 border-cyan-400/30 animate-pulse"></div>
                    </div>
                </div>
                {% else %}
                <div class="mb-6">
                    <div class="h-32 w-32 rounded-full bg-gradient-to-br from-cyan-500/30 to-purple-500/30 border-4 border-cyan-500/50 flex items-center justify-center" style="box-shadow: 0 0 30px rgba(6, 182, 212, 0.6);">
                        <svg class="w-16 h-16 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                </div>
                {% endif %}
                
                <!-- Name -->
                <h1 class="text-5xl font-bold text-cyan-400 mb-2" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.8);">
                    {{ user.firstName }} {{ user.lastName }}
                </h1>
                
                <!-- Contact Info -->
                <div class="flex flex-wrap items-center justify-center gap-4 mt-4">
                    {% if user.email %}
                    <div class="flex items-center text-gray-300">
                        <svg class="w-5 h-5 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <span>{{ user.email }}</span>
                    </div>
                    {% endif %}
                    {% if user.phone %}
                    <div class="flex items-center text-gray-300">
                        <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <span>{{ user.phone }}</span>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        
        <!-- Section Diplômes -->
        <section class="mb-16" aria-label="Diplômes et formations">
            <div class="flex items-center mb-8">
                <div class="bg-white/10 rounded-lg p-3 mr-4" style="box-shadow: 0 0 15px rgba(168, 85, 247, 0.4);">
                    <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                    </svg>
                </div>
                <h2 class="text-4xl font-bold text-purple-400" style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.6);">Diplômes</h2>
                <div class="flex-1 h-px bg-gradient-to-r from-purple-500/50 to-transparent ml-4"></div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for diploma in user.diplomas %}
                <article class="bg-gray-800/50 rounded-xl border border-purple-500/30 backdrop-blur-sm overflow-hidden transition-all duration-300 hover:border-purple-400/50 hover:scale-105" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
                    <header class="p-6 border-b border-purple-500/30" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(147, 51, 234, 0.2));">
                        <h3 class="text-2xl font-bold text-purple-400 mb-2" style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.6);">{{ diploma.title }}</h3>
                        <p class="text-cyan-300 font-semibold">{{ diploma.school }}</p>
                    </header>
                    <div class="p-6">
                        {% if diploma.city %}
                        <div class="flex items-center text-gray-400 mb-4">
                            <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span>{{ diploma.city }}</span>
                        </div>
                        {% endif %}
                        <div class="flex items-center gap-2 flex-wrap">
                            <span class="px-3 py-1 bg-cyan-500/20 rounded-full border border-cyan-400/30 text-sm text-cyan-300">
                                {{ diploma.dateStart|date('Y') }}
                            </span>
                            {% if diploma.dateEnd %}
                            <span class="text-gray-500">→</span>
                            <span class="px-3 py-1 bg-purple-500/20 rounded-full border border-purple-400/30 text-sm text-purple-300">
                                {{ diploma.dateEnd|date('Y') }}
                            </span>
                            {% else %}
                            <span class="px-3 py-1 bg-green-500/20 rounded-full border border-green-400/30 text-sm text-green-300">
                                En cours
                            </span>
                            {% endif %}
                        </div>
                    </div>
                </article>
                {% else %}
                <div class="col-span-full">
                    <div class="bg-gray-800/30 rounded-xl border border-gray-700/50 p-12 text-center">
                        <p class="text-gray-400 text-lg">Aucun diplôme enregistré</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <!-- Section Expériences -->
        <section class="mb-16" aria-label="Expériences professionnelles">
            <div class="flex items-center mb-8">
                <div class="bg-white/10 rounded-lg p-3 mr-4" style="box-shadow: 0 0 15px rgba(6, 182, 212, 0.4);">
                    <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h2 class="text-4xl font-bold text-cyan-400" style="text-shadow: 0 0 10px rgba(6, 182, 212, 0.6);">Expériences</h2>
                <div class="flex-1 h-px bg-gradient-to-r from-cyan-500/50 to-transparent ml-4"></div>
            </div>
            
            <div class="space-y-6">
                {% for experience in user.experiences %}
                <article class="bg-gray-800/50 rounded-xl border border-cyan-500/30 backdrop-blur-sm overflow-hidden transition-all duration-300 hover:border-cyan-400/50 hover:scale-[1.02]" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.2);">
                    <div class="p-6">
                        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                            <div class="flex-1">
                                <h3 class="text-3xl font-bold text-cyan-400 mb-3" style="text-shadow: 0 0 10px rgba(6, 182, 212, 0.6);">
                                    {{ experience.title }}
                                </h3>
                                {% if experience.business %}
                                <p class="text-xl text-purple-300 mb-2 font-semibold">{{ experience.business }}</p>
                                {% endif %}
                                {% if experience.city %}
                                <div class="flex items-center text-gray-400 mb-4">
                                    <svg class="w-4 h-4 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span>{{ experience.city }}</span>
                                </div>
                                {% endif %}
                                {% if experience.description %}
                                <p class="text-gray-300 leading-relaxed">{{ experience.description }}</p>
                                {% endif %}
                            </div>
                            <div class="flex flex-col items-end gap-2 shrink-0">
                                <div class="flex items-center gap-2 flex-wrap justify-end">
                                    <span class="px-4 py-2 bg-cyan-500/20 rounded-full border border-cyan-400/30 text-sm font-semibold text-cyan-300">
                                        {{ experience.dateStart|date('M Y') }}
                                    </span>
                                    {% if experience.dateEnd %}
                                    <span class="text-gray-500">→</span>
                                    <span class="px-4 py-2 bg-purple-500/20 rounded-full border border-purple-400/30 text-sm font-semibold text-purple-300">
                                        {{ experience.dateEnd|date('M Y') }}
                                    </span>
                                    {% else %}
                                    <span class="px-4 py-2 bg-green-500/20 rounded-full border border-green-400/30 text-sm font-semibold text-green-300">
                                        Actuel
                                    </span>
                                    {% endif %}
                                </div>
                                {% if experience.dateEnd %}
                                {% set duration = experience.dateEnd.diff(experience.dateStart) %}
                                <span class="text-xs text-gray-400">
                                    {{ duration.y }} an(s) {{ duration.m }} mois
                                </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </article>
                {% else %}
                <div class="bg-gray-800/30 rounded-xl border border-gray-700/50 p-12 text-center">
                    <p class="text-gray-400 text-lg">Aucune expérience enregistrée</p>
                </div>
                {% endfor %}
            </div>
        </section>

        <!-- Section Projets -->
        <section class="mb-16" aria-label="Projets réalisés">
            <div class="flex items-center mb-8">
                <div class="bg-white/10 rounded-lg p-3 mr-4" style="box-shadow: 0 0 15px rgba(249, 115, 22, 0.4);">
                    <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                </div>
                <h2 class="text-4xl font-bold text-orange-400" style="text-shadow: 0 0 10px rgba(249, 115, 22, 0.6);">Projets</h2>
                <div class="flex-1 h-px bg-gradient-to-r from-orange-500/50 to-transparent ml-4"></div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for project in user.projects %}
                <article class="bg-gray-800/50 rounded-xl border border-orange-500/30 backdrop-blur-sm overflow-hidden transition-all duration-300 hover:border-orange-400/50 hover:scale-105 h-full flex flex-col" style="box-shadow: 0 4px 20px rgba(249, 115, 22, 0.2);">
                    <header class="p-6 border-b border-orange-500/30" style="background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(234, 88, 12, 0.2));">
                        {% if project.customerName %}
                        <span class="inline-block px-3 py-1 bg-orange-500/20 rounded-full border border-orange-400/30 text-xs font-semibold text-orange-300 mb-3">
                            {{ project.customerName }}
                        </span>
                        {% endif %}
                        <h3 class="text-2xl font-bold text-orange-400" style="text-shadow: 0 0 10px rgba(249, 115, 22, 0.6);">
                            Projet #{{ project.id }}
                        </h3>
                    </header>
                    <div class="p-6 flex-1 flex flex-col">
                        {% if project.description %}
                        <p class="text-gray-300 mb-4 leading-relaxed flex-1">{{ project.description }}</p>
                        {% endif %}
                        
                        {% if project.dificulties %}
                        <div class="mb-4">
                            <p class="text-sm text-gray-400 mb-2 font-semibold">Défis rencontrés :</p>
                            <p class="text-gray-300 text-sm">{{ project.dificulties }}</p>
                        </div>
                        {% endif %}
                        
                        {% if project.technos|length > 0 %}
                        <div class="mb-4">
                            <p class="text-sm text-gray-400 mb-2 font-semibold">Technologies :</p>
                            <div class="flex flex-wrap gap-2">
                                {% for techno in project.technos %}
                                <span class="px-3 py-1 bg-cyan-500/20 rounded-full border border-cyan-400/30 text-xs text-cyan-300">
                                    {{ techno.name }}
                                </span>
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if project.linkToProject %}
                        <div class="mt-auto pt-4">
                            <a href="{{ project.linkToProject }}" target="_blank" rel="noopener noreferrer" 
                               class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-orange-600/50 hover:bg-orange-600/70 rounded-lg border border-orange-500/50 hover:border-orange-400 text-orange-300 font-semibold transition-all duration-300 hover:scale-105 neon-button-orange">
                                <span>Voir le projet</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </article>
                {% else %}
                <div class="col-span-full">
                    <div class="bg-gray-800/30 rounded-xl border border-gray-700/50 p-12 text-center">
                        <p class="text-gray-400 text-lg">Aucun projet enregistré</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>
    </div>
</main>

<style>
    .neon-button-orange {
        box-shadow: 0 0 10px rgba(249, 115, 22, 0.3);
    }
    
    .neon-button-orange:hover {
        box-shadow: 0 0 20px rgba(249, 115, 22, 0.6), 0 0 30px rgba(249, 115, 22, 0.4);
    }
</style>
{% endblock %}
