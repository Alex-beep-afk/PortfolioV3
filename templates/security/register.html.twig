{% extends 'base.html.twig' %}

{% block title %}Inscription - Portfolio{% endblock %}

{% block body %}
<main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <div class="w-full max-w-2xl">
        <!-- Register Card -->
        <section class="bg-gray-800/50 rounded-xl border border-purple-500/30 backdrop-blur-sm overflow-hidden" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
            <header class="p-6 border-b border-purple-500/30" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(6, 182, 212, 0.2));">
                <div class="flex items-center justify-center mb-2">
                    <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(168, 85, 247, 0.4);">
                        <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                        </svg>
                    </div>
                </div>
                <h1 class="text-2xl font-bold text-purple-400 text-center" style="text-shadow: 0 0 20px rgba(168, 85, 247, 0.8);">Créer un compte</h1>
                <p class="mt-2 text-sm text-gray-400 text-center">Rejoignez-nous et créez votre portfolio professionnel</p>
            </header>
            
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6', 'novalidate': 'novalidate', 'data-controller': 'register'}}) }}
                
                <!-- Username Field -->
                <div>
                    {{ form_label(form.username, null, {'label_attr': {'class': 'block text-sm font-medium text-cyan-400 mb-2'}}) }}
                    <div class="flex items-center mb-2">
                        <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="text-sm text-cyan-400 font-medium">Pseudo</span>
                    </div>
                    {{ form_widget(form.username, {'attr': {
                        'class': 'w-full px-4 py-3 bg-gray-700/50 border border-cyan-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/50 transition-all',
                        'style': 'box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);',
                        'placeholder': 'Choisissez un pseudo',
                        'data-register-target': 'usernameInput'
                    }}) }}
                    <div data-register-target="usernameError"></div>
                    {% if form.username.vars.errors|length > 0 %}
                        <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="text-sm text-red-400">{{ form_errors(form.username) }}</div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- First Name & Last Name Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-purple-400 mb-2'}}) }}
                        <div class="flex items-center mb-2">
                            <svg class="w-4 h-4 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="text-sm text-purple-400 font-medium">Prénom</span>
                        </div>
                        {{ form_widget(form.firstName, {'attr': {
                            'class': 'w-full px-4 py-3 bg-gray-700/50 border border-purple-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-purple-400 focus:ring-2 focus:ring-purple-400/50 transition-all',
                            'style': 'box-shadow: 0 0 10px rgba(168, 85, 247, 0.1);',
                            'placeholder': 'Votre prénom',
                            'data-register-target': 'firstnameInput'
                        }}) }}
                        <div data-register-target="firstnameError"></div>
                        {% if form.firstName.vars.errors|length > 0 %}
                            <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <div class="text-sm text-red-400">{{ form_errors(form.firstName) }}</div>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-purple-400 mb-2'}}) }}
                        <div class="flex items-center mb-2">
                            <svg class="w-4 h-4 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="text-sm text-purple-400 font-medium">Nom</span>
                        </div>
                        {{ form_widget(form.lastName, {'attr': {
                            'class': 'w-full px-4 py-3 bg-gray-700/50 border border-purple-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-purple-400 focus:ring-2 focus:ring-purple-400/50 transition-all',
                            'style': 'box-shadow: 0 0 10px rgba(168, 85, 247, 0.1);',
                            'placeholder': 'Votre nom',
                            'data-register-target': 'lastnameInput'
                        }}) }}
                        <div data-register-target="lastnameError"></div>
                        {% if form.lastName.vars.errors|length > 0 %}
                            <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <div class="text-sm text-red-400">{{ form_errors(form.lastName) }}</div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Email Field -->
                <div>
                    {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-emerald-400 mb-2'}}) }}
                    <div class="flex items-center mb-2">
                        <svg class="w-4 h-4 mr-2 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <span class="text-sm text-emerald-400 font-medium">Email</span>
                    </div>
                    {{ form_widget(form.email, {'attr': {
                        'class': 'w-full px-4 py-3 bg-gray-700/50 border border-emerald-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-emerald-400 focus:ring-2 focus:ring-emerald-400/50 transition-all',
                        'style': 'box-shadow: 0 0 10px rgba(16, 185, 129, 0.1);',
                        'placeholder': 'votre.email@exemple.com',
                        'data-register-target': 'emailInput'
                    }}) }}
                    <div data-register-target="emailError"></div>
                    {% if form.email.vars.errors|length > 0 %}
                        <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="text-sm text-red-400">{{ form_errors(form.email) }}</div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Phone Field -->
                <div>
                    {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-medium text-orange-400 mb-2'}}) }}
                    <div class="flex items-center mb-2">
                        <svg class="w-4 h-4 mr-2 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                        </svg>
                        <span class="text-sm text-orange-400 font-medium">Téléphone</span>
                    </div>
                    {{ form_widget(form.phone, {'attr': {
                        'class': 'w-full px-4 py-3 bg-gray-700/50 border border-orange-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/50 transition-all',
                        'style': 'box-shadow: 0 0 10px rgba(249, 115, 22, 0.1);',
                        'placeholder': '06 12 34 56 78'
                    }}) }}
                    {% if form.phone.vars.errors|length > 0 %}
                        <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="text-sm text-red-400">{{ form_errors(form.phone) }}</div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Password Field -->
                <div>
                    {{ form_label(form.password, null, {'label_attr': {'class': 'block text-sm font-medium text-cyan-400 mb-2'}}) }}
                    <div class="flex items-center mb-2">
                        <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                        <span class="text-sm text-cyan-400 font-medium">Mot de passe</span>
                    </div>
                    {{ form_widget(form.password, {'attr': {
                        'class': 'w-full px-4 py-3 bg-gray-700/50 border border-cyan-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/50 transition-all',
                        'style': 'box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);',
                        'placeholder': 'Choisissez un mot de passe sécurisé',
                        'data-register-target': 'passwordInput',
                        'autocomplete': 'new-password'
                    }}) }}
                    {% if form.password.vars.help %}
                        <p class="mt-1 text-xs text-gray-500">{{ form.password.vars.help }}</p>
                    {% endif %}
                    <div data-register-target="passwordError"></div>
                    {% if form.password.vars.errors|length > 0 %}
                        <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="text-sm text-red-400">{{ form_errors(form.password) }}</div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Avatar Field -->
                <div>
                    {{ form_label(form.avatarFile, null, {'label_attr': {'class': 'block text-sm font-medium text-purple-400 mb-2'}}) }}
                    <div class="flex items-center mb-2">
                        <svg class="w-4 h-4 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span class="text-sm text-purple-400 font-medium">Photo de profil (optionnel)</span>
                    </div>
                    <div class="mt-2">
                        {{ form_widget(form.avatarFile, {'attr': {
                            'class': 'w-full px-4 py-3 bg-gray-700/50 border border-purple-500/30 rounded-lg text-gray-300 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-purple-600/50 file:text-purple-300 hover:file:bg-purple-600/70 file:cursor-pointer focus:outline-none focus:border-purple-400 focus:ring-2 focus:ring-purple-400/50 transition-all',
                            'style': 'box-shadow: 0 0 10px rgba(168, 85, 247, 0.1);'
                        }}) }}
                    </div>
                    {% if form.avatarFile.vars.errors|length > 0 %}
                        <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div class="text-sm text-red-400">{{ form_errors(form.avatarFile) }}</div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Submit Button -->
                <div class="pt-4">
                    <button 
                        type="submit" 
                        class="w-full px-6 py-4 text-lg font-semibold text-white bg-gradient-to-r from-purple-600 via-cyan-600 to-purple-600 rounded-lg border border-purple-400/50 transition-all duration-300 neon-button-register opacity-50 cursor-not-allowed"
                        data-register-target="submitButton"
                        disabled
                    >
                        <div class="flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                            </svg>
                            Créer mon compte
                        </div>
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </section>

        <!-- Additional Info -->
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-400">
                Déjà un compte ? 
                <a href="{{ path('login') }}" class="text-cyan-400 hover:text-cyan-300 font-semibold transition-colors duration-300" style="text-shadow: 0 0 10px rgba(6, 182, 212, 0.6);">
                    Se connecter
                </a>
            </p>
        </div>
    </div>
</main>
{% endblock %}

