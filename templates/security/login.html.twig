{% extends 'base.html.twig' %}

{% block title %}Connexion - Portfolio{% endblock %}

{% block body %}

<main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);" data-turbo="false">
    <div class="w-full max-w-md">
        <!-- Login Card -->
        <section class="bg-gray-800/50 rounded-xl border border-cyan-500/30 backdrop-blur-sm overflow-hidden" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.2);">
            <header class="p-6 border-b border-cyan-500/30" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(168, 85, 247, 0.2));">
                <div class="flex items-center justify-center mb-2">
                    <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(6, 182, 212, 0.4);">
                        <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                </div>
                <h1 class="text-2xl font-bold text-cyan-400 text-center" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.8);">Se connecter</h1>
                <p class="mt-2 text-sm text-gray-400 text-center">Accédez à votre espace portfolio</p>
            </header>
            
            <div class="p-6">
                <form action="{{ path('login') }}" method="post" class="space-y-6" >
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {% if error %}
                        <div class="bg-red-500/20 border border-red-500/50 rounded-lg p-4 mb-4" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <p class="text-sm text-red-400" style="text-shadow: 0 0 10px rgba(239, 68, 68, 0.6);">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Username Field -->
                    <div>
                        <label for="username" class="block text-sm font-medium text-cyan-400 mb-2">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Pseudo
                            </div>
                        </label>
                        <input 
                            type="text" 
                            id="username" 
                            name="_username" 
                            value="{{ last_username }}" 
                            required
                            autofocus
                            class="w-full px-4 py-3 bg-gray-700/50 border border-cyan-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/50 transition-all"
                            style="box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);"
                            placeholder="Entrez votre pseudo"
                            autocomplete="username"
                        />
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-purple-400 mb-2">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Mot de passe
                            </div>
                        </label>
                        <input 
                            type="password" 
                            id="password" 
                            name="_password" 
                            required
                            class="w-full px-4 py-3 bg-gray-700/50 border border-purple-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-purple-400 focus:ring-2 focus:ring-purple-400/50 transition-all"
                            style="box-shadow: 0 0 10px rgba(168, 85, 247, 0.1);"
                            placeholder="Entrez votre mot de passe"
                            autocomplete="current-password"
                        />
                    </div>

                    <!-- Remember Me -->
                    <div class="flex items-center">
                        <input 
                            type="checkbox" 
                            id="remember_me" 
                            name="_remember_me" 
                            class="w-4 h-4 rounded border-cyan-500/30 bg-gray-700/50 text-cyan-400 focus:ring-cyan-400 focus:ring-2 focus:ring-offset-0 cursor-pointer"
                            style="box-shadow: 0 0 10px rgba(6, 182, 212, 0.2);"
                        />
                        <label for="remember_me" class="ml-2 text-sm text-gray-400 hover:text-cyan-400 transition-colors cursor-pointer custom-label">
                            Se souvenir de moi
                        </label>
                    </div>

                    <!-- reCAPTCHA -->
                    <div class="flex justify-center pt-2">
                        <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}" data-theme="dark"></div>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-2">
                        <button 
                            type="submit" 
                            class="w-full px-6 py-3 text-sm font-medium text-cyan-400 bg-cyan-600/50 hover:bg-cyan-600/70 rounded-lg border border-cyan-500/50 hover:border-cyan-400 transition-all duration-300 neon-button-login"
                        >
                            <div class="flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                                </svg>
                                Se connecter
                            </div>
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Additional Info -->
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-400">
                Accès réservé aux utilisateurs autorisés
            </p>
        </div>
    </div>
</main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}
