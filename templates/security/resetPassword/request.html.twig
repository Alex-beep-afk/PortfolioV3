{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe - Portfolio{% endblock %}

{% block body %}

<main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);" data-turbo="false">
    <div class="w-full max-w-md">
        <!-- Reset Password Request Card -->
        <section class="bg-gray-800/50 rounded-xl border border-cyan-500/30 backdrop-blur-sm overflow-hidden" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.2);">
            <header class="p-6 border-b border-cyan-500/30" style="background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(168, 85, 247, 0.2));">
                <div class="flex items-center justify-center mb-2">
                    <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(6, 182, 212, 0.4);">
                        <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                        </svg>
                    </div>
                </div>
                <h1 class="text-2xl font-bold text-cyan-400 text-center" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.8);">Réinitialiser votre mot de passe</h1>
                <p class="mt-2 text-sm text-gray-400 text-center">Entrez votre adresse email pour recevoir un lien de réinitialisation</p>
            </header>
            
            <div class="p-6">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="bg-red-500/20 border border-red-500/50 rounded-lg p-4 mb-4" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <p class="text-sm text-red-400" style="text-shadow: 0 0 10px rgba(239, 68, 68, 0.6);">
                                {{ flash_error }}
                            </p>
                        </div>
                    </div>
                {% endfor %}

                {{ form_start(requestForm, {'attr': {'class': 'space-y-6'}}) }}
                    
                    <!-- Email Field -->
                    <div>
                        <label for="{{ requestForm.email.vars.id }}" class="block text-sm font-medium text-cyan-400 mb-2">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                Adresse email
                            </div>
                        </label>
                        {{ form_widget(requestForm.email, {
                            'attr': {
                                'class': 'w-full px-4 py-3 bg-gray-700/50 border border-cyan-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/50 transition-all',
                                'style': 'box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);',
                                'placeholder': 'Entrez votre adresse email',
                                'autocomplete': 'email'
                            }
                        }) }}
                        {% if requestForm.email.vars.errors|length > 0 %}
                            <div class="mt-2 bg-red-500/20 border border-red-500/50 rounded-lg p-3" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.3);">
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <div class="text-sm text-red-400">{{ form_errors(requestForm.email) }}</div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="mt-2">
                            <small class="text-sm text-gray-400">
                                Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </small>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-2">
                        <button 
                            type="submit" 
                            class="w-full px-6 py-3 text-sm font-medium text-cyan-400 bg-cyan-600/50 hover:bg-cyan-600/70 rounded-lg border border-cyan-500/50 hover:border-cyan-400 transition-all duration-300"
                            style="box-shadow: 0 0 15px rgba(6, 182, 212, 0.3);"
                        >
                            <div class="flex items-center justify-center">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                Envoyer l'email de réinitialisation
                            </div>
                        </button>
                    </div>

                    <!-- Back to Login Link -->
                    <div class="pt-4 text-center">
                        <a href="{{ path('login') }}" class="text-sm text-cyan-400 hover:text-cyan-300 transition-colors underline decoration-cyan-500/50 hover:decoration-cyan-400">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Retour à la connexion
                        </a>
                    </div>

                {{ form_end(requestForm) }}
            </div>
        </section>
    </div>
</main>
{% endblock %}
