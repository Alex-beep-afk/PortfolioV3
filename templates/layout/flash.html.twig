{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div 
            class="fixed top-20 right-4 z-50 max-w-md w-full animate-slide-in" 
            role="alert" 
            aria-live="polite"
            data-controller="flash-message-controller"
            data-flash-message-duration-value="5000"
            data-flash-message-auto-close-value="true"
            data-action="mouseenter->flash-message#pause mouseleave->flash-message#resume"
        >
            <div class="p-4 rounded-lg border backdrop-blur-sm transition-all duration-300 {% if label == 'success' %}bg-green-900/30 border-green-500/50 text-green-400{% elseif label == 'error' %}bg-red-900/30 border-red-500/50 text-red-400{% elseif label == 'warning' %}bg-yellow-900/30 border-yellow-500/50 text-yellow-400{% elseif label == 'info' %}bg-blue-900/30 border-blue-500/50 text-blue-400{% else %}bg-gray-900/30 border-gray-500/50 text-gray-400{% endif %}" style="box-shadow: 0 0 20px {% if label == 'success' %}rgba(34, 197, 94, 0.4){% elseif label == 'error' %}rgba(239, 68, 68, 0.4){% elseif label == 'warning' %}rgba(234, 179, 8, 0.4){% elseif label == 'info' %}rgba(59, 130, 246, 0.4){% else %}rgba(107, 114, 128, 0.4){% endif %};">
                <div class="flex items-start">
                    <div class="shrink-0">
                        {% if label == 'success' %}
                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% elseif label == 'error' %}
                            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% elseif label == 'warning' %}
                            <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                        {% elseif label == 'info' %}
                            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% else %}
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        {% endif %}
                    </div>
                    <div class="ml-3 flex-1">
                        <p class="text-sm font-medium">{{ message }}</p>
                    </div>
                    <button 
                        type="button" 
                        class="ml-4 shrink-0 text-gray-400 hover:text-gray-300 focus:outline-none transition-colors" 
                        data-action="click->flash-message#close"
                        aria-label="Fermer"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}

<style>
    @keyframes slide-in {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
    
    @keyframes slide-out {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(100%);
            opacity: 0;
        }
    }
    
    .animate-slide-in {
        animation: slide-in 0.3s ease-out;
    }
    
    .animate-slide-out {
        animation: slide-out 0.3s ease-in;
    }
</style>

