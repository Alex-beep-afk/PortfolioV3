<header class="bg-gray-900 border-b border-cyan-500/30 sticky top-0 z-50" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.3);">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <input type="checkbox" id="mobile-menu-toggle" class="hidden">
        <div class="flex items-center justify-between h-16">
            <!-- Logo / Brand -->
            <div class="flex items-center">
                <a href="{% if app.user %}{{ path('user.dashboard') }}{% else %}{{ path('login') }}{% endif %}" class="flex items-center space-x-3 group">
                    <div class="rounded-lg p-2 transition-all duration-300 group-hover:scale-105" style="background: linear-gradient(135deg, #00f0ff, #ff00ff); box-shadow: 0 0 20px rgba(0, 240, 255, 0.6), inset 0 0 20px rgba(255, 0, 255, 0.3);">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                    </div>
                    <span class="text-xl font-bold tracking-wide neon-text">
                        Portfolio Admin
                    </span>
                </a>
            </div>

            <!-- Desktop Navigation - Visible seulement si connecté -->
            {% if app.user %}
            <nav class="hidden md:flex items-center space-x-2" aria-label="Navigation principale">
                <a href="{{ path('user.dashboard') }}" class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 {% if app.request.attributes.get('_route') == 'user.dashboard' %}text-cyan-400{% else %}text-gray-300 hover:text-cyan-400{% endif %} hover:bg-cyan-500/10 border border-transparent hover:border-cyan-500/50" style="{% if app.request.attributes.get('_route') == 'user.dashboard' %}box-shadow: 0 0 15px rgba(6, 182, 212, 0.5), inset 0 0 15px rgba(6, 182, 212, 0.1); border-color: rgba(6, 182, 212, 0.5);{% endif %}">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Dashboard
                    </span>
                </a>
                <a href="{{ path('experiences.index') }}" class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 {% if 'experiences' in app.request.attributes.get('_route') %}text-cyan-400{% else %}text-gray-300 hover:text-cyan-400{% endif %} hover:bg-cyan-500/10 border border-transparent hover:border-cyan-500/50" style="{% if 'experiences' in app.request.attributes.get('_route') %}box-shadow: 0 0 15px rgba(6, 182, 212, 0.5), inset 0 0 15px rgba(6, 182, 212, 0.1); border-color: rgba(6, 182, 212, 0.5);{% endif %}">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        Expériences
                    </span>
                </a>
                <a href="{{ path('diplomas.index') }}" class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 {% if 'diplomas' in app.request.attributes.get('_route') %}text-purple-400{% else %}text-gray-300 hover:text-purple-400{% endif %} hover:bg-purple-500/10 border border-transparent hover:border-purple-500/50" style="{% if 'diplomas' in app.request.attributes.get('_route') %}box-shadow: 0 0 15px rgba(168, 85, 247, 0.5), inset 0 0 15px rgba(168, 85, 247, 0.1); border-color: rgba(168, 85, 247, 0.5);{% endif %}">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                        </svg>
                        Diplômes
                    </span>
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('techno.index') }}" class="px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 {% if 'techno' in app.request.attributes.get('_route') %}text-emerald-400{% else %}text-gray-300 hover:text-emerald-400{% endif %} hover:bg-emerald-500/10 border border-transparent hover:border-emerald-500/50" style="{% if 'techno' in app.request.attributes.get('_route') %}box-shadow: 0 0 15px rgba(16, 185, 129, 0.5), inset 0 0 15px rgba(16, 185, 129, 0.1); border-color: rgba(16, 185, 129, 0.5);{% endif %}">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                        </svg>
                        Technologies
                    </span>
                </a>
                {% endif %}
                <button disabled class="px-4 py-2 rounded-lg text-sm font-medium text-gray-600 opacity-50 cursor-not-allowed border border-gray-700">
                    <span class="flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        Projets
                    </span>
                </button>
            </nav>
            {% endif %}

            <!-- User Menu -->
            <div class="flex items-center space-x-4">
                <!-- User Info - Seulement si connecté -->
                {% if app.user %}
                <div class="hidden lg:flex items-center space-x-3">
                    <div class="text-right">
                        <p class="text-sm font-medium text-cyan-400">{{ app.user.username }}</p>
                        <p class="text-xs text-gray-400">Connecté</p>
                    </div>
                    <div class="h-8 w-8 rounded-full flex items-center justify-center text-white font-semibold text-sm neon-avatar">
                        {{ app.user.username|first|upper }}
                    </div>
                </div>
                {% endif %}

                <!-- Bouton Connexion/Déconnexion -->
                {% if app.user %}
                    <!-- Bouton Déconnexion -->
                    <a href="{{ path('_logout_main') }}" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-gray-300 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-cyan-500/50 hover:border-cyan-400 hover:text-cyan-400 neon-button">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        <span class="hidden sm:inline">Déconnexion</span>
                        <span class="sm:hidden">Déco</span>
                    </a>
                {% else %}
                    <!-- Bouton Connexion -->
                    <a href="{{ path('login') }}" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-gray-300 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-cyan-500/50 hover:border-cyan-400 hover:text-cyan-400 neon-button">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                        </svg>
                        <span class="hidden sm:inline">Connexion</span>
                        <span class="sm:hidden">Connexion</span>
                    </a>
                {% endif %}

                <!-- Mobile menu toggle - Seulement si connecté -->
                {% if app.user %}
                <label for="mobile-menu-toggle" class="lg:hidden inline-flex items-center justify-center p-2 rounded-lg text-gray-300 hover:text-cyan-400 hover:bg-cyan-500/10 border border-transparent hover:border-cyan-500/50 cursor-pointer transition-all duration-300">
                    <svg class="h-6 w-6 mobile-icon-open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                    <svg class="h-6 w-6 mobile-icon-close hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </label>
                {% endif %}
            </div>
        </div>

        <!-- Mobile menu - Seulement si connecté -->
        {% if app.user %}
        <div class="mobile-menu hidden lg:hidden border-t border-cyan-500/30" style="box-shadow: 0 -4px 20px rgba(6, 182, 212, 0.2);">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="{{ path('user.dashboard') }}" class="block px-3 py-2 rounded-lg text-base font-medium transition-all duration-300 {% if app.request.attributes.get('_route') == 'user.dashboard' %}text-cyan-400 bg-cyan-500/10{% else %}text-gray-300 hover:text-cyan-400 hover:bg-cyan-500/10{% endif %} border border-transparent {% if app.request.attributes.get('_route') == 'user.dashboard' %}border-cyan-500/50{% else %}hover:border-cyan-500/50{% endif %}" style="{% if app.request.attributes.get('_route') == 'user.dashboard' %}box-shadow: 0 0 10px rgba(6, 182, 212, 0.3);{% endif %}">
                    Dashboard
                </a>
                <a href="{{ path('experiences.index') }}" class="block px-3 py-2 rounded-lg text-base font-medium transition-all duration-300 {% if 'experiences' in app.request.attributes.get('_route') %}text-cyan-400 bg-cyan-500/10{% else %}text-gray-300 hover:text-cyan-400 hover:bg-cyan-500/10{% endif %} border border-transparent {% if 'experiences' in app.request.attributes.get('_route') %}border-cyan-500/50{% else %}hover:border-cyan-500/50{% endif %}" style="{% if 'experiences' in app.request.attributes.get('_route') %}box-shadow: 0 0 10px rgba(6, 182, 212, 0.3);{% endif %}">
                    Expériences
                </a>
                <a href="{{ path('diplomas.index') }}" class="block px-3 py-2 rounded-lg text-base font-medium transition-all duration-300 {% if 'diplomas' in app.request.attributes.get('_route') %}text-purple-400 bg-purple-500/10{% else %}text-gray-300 hover:text-purple-400 hover:bg-purple-500/10{% endif %} border border-transparent {% if 'diplomas' in app.request.attributes.get('_route') %}border-purple-500/50{% else %}hover:border-purple-500/50{% endif %}" style="{% if 'diplomas' in app.request.attributes.get('_route') %}box-shadow: 0 0 10px rgba(168, 85, 247, 0.3);{% endif %}">
                    Diplômes
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('techno.index') }}" class="block px-3 py-2 rounded-lg text-base font-medium transition-all duration-300 {% if 'techno' in app.request.attributes.get('_route') %}text-emerald-400 bg-emerald-500/10{% else %}text-gray-300 hover:text-emerald-400 hover:bg-emerald-500/10{% endif %} border border-transparent {% if 'techno' in app.request.attributes.get('_route') %}border-emerald-500/50{% else %}hover:border-emerald-500/50{% endif %}" style="{% if 'techno' in app.request.attributes.get('_route') %}box-shadow: 0 0 10px rgba(16, 185, 129, 0.3);{% endif %}">
                    Technologies
                </a>
                {% endif %}
                <button disabled class="block w-full text-left px-3 py-2 rounded-lg text-base font-medium text-gray-600 cursor-not-allowed border border-gray-700">
                    Projets
                </button>
            </div>
            <div class="px-2 pt-2 pb-3 border-t border-cyan-500/30">
                <div class="flex items-center px-3 py-2">
                    <div class="h-10 w-10 rounded-full flex items-center justify-center text-white font-semibold neon-avatar">
                        {{ app.user.username|first|upper }}
                    </div>
                    <div class="ml-3">
                        <p class="text-base font-medium text-cyan-400">{{ app.user.username }}</p>
                        <p class="text-sm text-gray-400">Connecté</p>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </nav>
</header>

<style>
    /* Animation néon pour le texte du logo */
    @keyframes neon-glow {
        0% {
            filter: brightness(1);
            text-shadow: 0 0 20px rgba(0, 240, 255, 0.8), 0 0 40px rgba(255, 0, 255, 0.6);
        }
        100% {
            filter: brightness(1.2);
            text-shadow: 0 0 30px rgba(0, 240, 255, 1), 0 0 60px rgba(255, 0, 255, 0.8), 0 0 80px rgba(0, 240, 255, 0.4);
        }
    }
    
    .neon-text {
        background: linear-gradient(90deg, #00f0ff, #ff00ff, #00f0ff);
        background-size: 200% auto;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        animation: neon-glow 3s ease-in-out infinite alternate;
    }
    
    .neon-avatar {
        background: linear-gradient(135deg, #00f0ff, #ff00ff);
        box-shadow: 0 0 15px rgba(0, 240, 255, 0.6), inset 0 0 10px rgba(255, 0, 255, 0.3);
    }
    
    .neon-button {
        box-shadow: 0 0 10px rgba(6, 182, 212, 0.3);
    }
    
    .neon-button:hover {
        box-shadow: 0 0 20px rgba(6, 182, 212, 0.6), 0 0 30px rgba(6, 182, 212, 0.4);
    }
    
    /* Menu mobile avec CSS pur */
    #mobile-menu-toggle:checked ~ .mobile-menu {
        display: block !important;
    }
    
    #mobile-menu-toggle:checked ~ div label .mobile-icon-open {
        display: none;
    }
    
    #mobile-menu-toggle:checked ~ div label .mobile-icon-close {
        display: block;
    }
</style>
