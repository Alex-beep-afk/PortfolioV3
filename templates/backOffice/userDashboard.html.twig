{% extends 'base.html.twig' %}

{% block title %}Dashboard - Administration{% endblock %}

{% block body %}
<main class="min-h-screen" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <!-- Page Header -->
    <header class="bg-gray-900/80 border-b border-cyan-500/30 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div>
                <h1 class="text-3xl font-bold text-cyan-400" style="text-shadow: 0 0 20px rgba(6, 182, 212, 0.8);">Tableau de bord</h1>
                <p class="mt-1 text-sm text-gray-400">Gérez vos ressources portfolio</p>
            </div>
        </div>
    </header>

    <!-- Preview Link -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <a href="{{ path('portfolio.show', {id: app.user.id}) }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-cyan-400 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-cyan-500/50 hover:border-cyan-400 neon-button">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            Prévisualisation du portfolio
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
        </a>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Resources Section -->
        <section aria-label="Ressources du portfolio">
            <h2 class="sr-only">Ressources disponibles</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                
                <!-- Profile Card -->
                <article class="bg-gray-800/50 rounded-xl border border-indigo-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-indigo-400/50 group" style="box-shadow: 0 4px 20px rgba(99, 102, 241, 0.2);">
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(99, 102, 241, 0.3), rgba(79, 70, 229, 0.3)); border-bottom: 1px solid rgba(99, 102, 241, 0.3);">
                        <div class="flex items-center justify-between">
                            <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(99, 102, 241, 0.4);">
                                <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <span class="text-indigo-400/80 text-sm font-medium" style="text-shadow: 0 0 10px rgba(99, 102, 241, 0.6);">Profil</span>
                        </div>
                    </header>
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-indigo-400 mb-2" style="text-shadow: 0 0 10px rgba(99, 102, 241, 0.6);">Gérer votre profil</h3>
                        <p class="text-sm text-gray-400 mb-4">Modifiez vos informations personnelles et paramètres</p>
                        <nav class="flex flex-col space-y-2" aria-label="Actions profil">
                            <a href="{{ path('user.edit', {id: app.user.id}) }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-indigo-600/50 text-indigo-300 rounded-lg font-medium hover:bg-indigo-600/70 transition-all duration-300 border border-indigo-500/50 hover:border-indigo-400 neon-button-indigo">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Modifier le profil
                            </a>
                        </nav>
                    </div>
                </article>

                <!-- Experiences Card -->
                <article class="bg-gray-800/50 rounded-xl border border-cyan-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-cyan-400/50 group" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.2);">
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.3), rgba(37, 99, 235, 0.3)); border-bottom: 1px solid rgba(6, 182, 212, 0.3);">
                        <div class="flex items-center justify-between">
                            <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);">
                                <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <span class="text-cyan-400/80 text-sm font-medium" style="text-shadow: 0 0 10px rgba(6, 182, 212, 0.6);">Expériences</span>
                        </div>
                    </header>
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-cyan-400 mb-2" style="text-shadow: 0 0 10px rgba(6, 182, 212, 0.6);">Gérer les expériences</h3>
                        <p class="text-sm text-gray-400 mb-4">Ajoutez et modifiez vos expériences professionnelles</p>
                        <nav class="flex flex-col space-y-2" aria-label="Actions expériences">
                            <a href="{{ path('experiences.index') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-cyan-600/50 text-cyan-300 rounded-lg font-medium hover:bg-cyan-600/70 transition-all duration-300 border border-cyan-500/50 hover:border-cyan-400 neon-button">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                Voir toutes
                            </a>
                            <a href="{{ path('experiences.new') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-700/50 text-cyan-400 rounded-lg font-medium hover:bg-gray-700 transition-all duration-300 border border-cyan-500/30 hover:border-cyan-400/50">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Ajouter
                            </a>
                        </nav>
                    </div>
                </article>

                <!-- Diplomas Card -->
                <article class="bg-gray-800/50 rounded-xl border border-purple-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-purple-400/50 group" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.3), rgba(147, 51, 234, 0.3)); border-bottom: 1px solid rgba(168, 85, 247, 0.3);">
                        <div class="flex items-center justify-between">
                            <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(168, 85, 247, 0.4);">
                                <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14v9M4.5 12.75l6.5 3.5M19.5 12.75l-6.5 3.5"></path>
                                </svg>
                            </div>
                            <span class="text-purple-400/80 text-sm font-medium" style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.6);">Diplômes</span>
                        </div>
                    </header>
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-purple-400 mb-2" style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.6);">Gérer les diplômes</h3>
                        <p class="text-sm text-gray-400 mb-4">Ajoutez et modifiez vos formations et diplômes</p>
                        <nav class="flex flex-col space-y-2" aria-label="Actions diplômes">
                            <a href="{{ path('diplomas.index') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-purple-600/50 text-purple-300 rounded-lg font-medium hover:bg-purple-600/70 transition-all duration-300 border border-purple-500/50 hover:border-purple-400 neon-button-purple">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                Voir toutes
                            </a>
                            <a href="{{ path('diplomas.new') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-700/50 text-purple-400 rounded-lg font-medium hover:bg-gray-700 transition-all duration-300 border border-purple-500/30 hover:border-purple-400/50">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Ajouter
                            </a>
                        </nav>
                    </div>
                </article>

                <!-- Techno Card - Visible uniquement pour les administrateurs -->
                {% if is_granted('ROLE_ADMIN') %}
                <article class="bg-gray-800/50 rounded-xl border border-emerald-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-emerald-400/50 group" style="box-shadow: 0 4px 20px rgba(16, 185, 129, 0.2);">
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.3), rgba(5, 150, 105, 0.3)); border-bottom: 1px solid rgba(16, 185, 129, 0.3);">
                        <div class="flex items-center justify-between">
                            <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(16, 185, 129, 0.4);">
                                <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                </svg>
                            </div>
                            <span class="text-emerald-400/80 text-sm font-medium" style="text-shadow: 0 0 10px rgba(16, 185, 129, 0.6);">Technologies</span>
                        </div>
                    </header>
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-emerald-400 mb-2" style="text-shadow: 0 0 10px rgba(16, 185, 129, 0.6);">Gérer les technologies</h3>
                        <p class="text-sm text-gray-400 mb-4">Ajoutez et modifiez vos compétences techniques</p>
                        <nav class="flex flex-col space-y-2" aria-label="Actions technologies">
                            <a href="{{ path('techno.index') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-emerald-600/50 text-emerald-300 rounded-lg font-medium hover:bg-emerald-600/70 transition-all duration-300 border border-emerald-500/50 hover:border-emerald-400 neon-button-emerald">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                Voir toutes
                            </a>
                            <a href="{{ path('techno.new') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-700/50 text-emerald-400 rounded-lg font-medium hover:bg-gray-700 transition-all duration-300 border border-emerald-500/30 hover:border-emerald-400/50">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Ajouter
                            </a>
                        </nav>
                    </div>
                </article>
                {% endif %}

                <!-- Project Card -->
                <article class="bg-gray-800/50 rounded-xl border border-orange-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-orange-400/50 group" style="box-shadow: 0 4px 20px rgba(249, 115, 22, 0.2);">
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(249, 115, 22, 0.3), rgba(234, 88, 12, 0.3)); border-bottom: 1px solid rgba(249, 115, 22, 0.3);">
                        <div class="flex items-center justify-between">
                            <div class="bg-white/10 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(249, 115, 22, 0.4);">
                                <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                </svg>
                            </div>
                            <span class="text-orange-400/80 text-sm font-medium" style="text-shadow: 0 0 10px rgba(249, 115, 22, 0.6);">Projets</span>
                        </div>
                    </header>
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-orange-400 mb-2" style="text-shadow: 0 0 10px rgba(249, 115, 22, 0.6);">Gérer les projets</h3>
                        <p class="text-sm text-gray-400 mb-4">Ajoutez et modifiez vos projets réalisés</p>
                        <nav class="flex flex-col space-y-2" aria-label="Actions projets">
                            <a href="{{ path('project.index') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-orange-600/50 text-orange-300 rounded-lg font-medium hover:bg-orange-600/70 transition-all duration-300 border border-orange-500/50 hover:border-orange-400 neon-button-orange">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                </svg>
                                Voir toutes
                            </a>
                            <a href="{{ path('project.new') }}" class="w-full inline-flex items-center justify-center px-4 py-2 bg-gray-700/50 text-orange-400 rounded-lg font-medium hover:bg-gray-700 transition-all duration-300 border border-orange-500/30 hover:border-orange-400/50">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                Ajouter
                            </a>
                        </nav>
                    </div>
                </article>

            </div>
        </section>

        <!-- Statistics Section -->
        <section class="mt-8" aria-label="Statistiques du portfolio">
            <h2 class="sr-only">Statistiques</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <article class="bg-gray-800/50 rounded-xl border border-cyan-500/30 p-6 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(6, 182, 212, 0.2);">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-400">Expériences</p>
                            <p class="text-2xl font-bold text-cyan-400 mt-2" aria-label="Nombre d'expériences" style="text-shadow: 0 0 15px rgba(6, 182, 212, 0.8);">
                                {{ app.user.experiences|length }}
                            </p>
                            {% if app.user.experiences|length > 0 %}
                            <div class="mt-4 space-y-2 max-h-32 overflow-y-auto">
                                {% for experience in app.user.experiences|slice(0, 3) %}
                                <div class="flex items-center space-x-2">
                                    <div class="w-1.5 h-1.5 rounded-full bg-cyan-400" style="box-shadow: 0 0 8px rgba(6, 182, 212, 0.6);"></div>
                                    <p class="text-xs text-gray-300 truncate">
                                        {% if experience.title %}
                                            {{ experience.title }}
                                        {% elseif experience.business %}
                                            {{ experience.business }}
                                        {% else %}
                                            Expérience #{{ experience.id }}
                                        {% endif %}
                                    </p>
                                </div>
                                {% endfor %}
                                {% if app.user.experiences|length > 3 %}
                                <a href="{{ path('experiences.index') }}" class="text-xs text-gray-500 italic pl-3.5 hover:text-cyan-400 transition-colors">
                                    +{{ app.user.experiences|length - 3 }} autre{{ app.user.experiences|length - 3 > 1 ? 's' : '' }}
                                </a>
                                {% endif %}
                            </div>
                            {% else %}
                            <a href="{{ path('experiences.new') }}" class="text-xs text-gray-500 mt-2 hover:text-cyan-400 transition-colors">Aucune expérience</a>
                            {% endif %}
                        </div>
                        <div class="bg-cyan-500/20 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(6, 182, 212, 0.4);" aria-hidden="true">
                            <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                    </div>
                </article>

                <article class="bg-gray-800/50 rounded-xl border border-purple-500/30 p-6 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-400">Diplômes</p>
                            <p class="text-2xl font-bold text-purple-400 mt-2" aria-label="Nombre de diplômes" style="text-shadow: 0 0 15px rgba(168, 85, 247, 0.8);">
                                {{ app.user.diplomas|length }}
                            </p>
                            {% if app.user.diplomas|length > 0 %}
                            <div class="mt-4 space-y-2 max-h-32 overflow-y-auto">
                                {% for diploma in app.user.diplomas|slice(0, 3) %}
                                <div class="flex items-center space-x-2">
                                    <div class="w-1.5 h-1.5 rounded-full bg-purple-400" style="box-shadow: 0 0 8px rgba(168, 85, 247, 0.6);"></div>
                                    <p class="text-xs text-gray-300 truncate">
                                        {% if diploma.title %}
                                            {{ diploma.title }}
                                        {% elseif diploma.school %}
                                            {{ diploma.school }}
                                        {% else %}
                                            Diplôme #{{ diploma.id }}
                                        {% endif %}
                                    </p>
                                </div>
                                {% endfor %}
                                {% if app.user.diplomas|length > 3 %}
                                <a href="{{ path('diplomas.index') }}" class="text-xs text-gray-500 italic pl-3.5 hover:text-purple-400 transition-colors">
                                    +{{ app.user.diplomas|length - 3 }} autre{{ app.user.diplomas|length - 3 > 1 ? 's' : '' }}
                                </a>
                                {% endif %}
                            </div>
                            {% else %}
                            <a href="{{ path('diplomas.new') }}" class="text-xs text-gray-500 mt-2 hover:text-purple-400 transition-colors">Aucun diplôme</a>
                            {% endif %}
                        </div>
                        <div class="bg-purple-500/20 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(168, 85, 247, 0.4);" aria-hidden="true">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                            </svg>
                        </div>
                    </div>
                </article>

                <article class="bg-gray-800/50 rounded-xl border border-orange-500/30 p-6 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(249, 115, 22, 0.2);">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-400">Projets</p>
                            <p class="text-2xl font-bold text-orange-400 mt-2" aria-label="Nombre de projets" style="text-shadow: 0 0 15px rgba(249, 115, 22, 0.8);">
                                {{ app.user.projects|length }}
                            </p>
                            {% if app.user.projects|length > 0 %}
                            <div class="mt-4 space-y-2 max-h-32 overflow-y-auto">
                                {% for project in app.user.projects|slice(0, 3) %}
                                <div class="flex items-center space-x-2">
                                    <div class="w-1.5 h-1.5 rounded-full bg-orange-400" style="box-shadow: 0 0 8px rgba(249, 115, 22, 0.6);"></div>
                                    <p class="text-xs text-gray-300 truncate">
                                        {% if project.customerName %}
                                            {{ project.customerName }}
                                        {% else %}
                                            Projet #{{ project.id }}
                                        {% endif %}
                                    </p>
                                </div>
                                {% endfor %}
                                {% if app.user.projects|length > 3 %}
                                <a href="{{ path('project.index') }}" class="text-xs text-gray-500 italic pl-3.5">
                                    +{{ app.user.projects|length - 3 }} autre{{ app.user.projects|length - 3 > 1 ? 's' : '' }}
                                </a>
                                {% endif %}
                            </div>
                            {% else %}
                            <a href="{{ path('project.new') }}" class="text-xs text-gray-500 mt-2">Aucun projet</a>
                            {% endif %}
                        </div>
                        <div class="bg-orange-500/20 rounded-lg p-3" style="box-shadow: 0 0 15px rgba(249, 115, 22, 0.4);" aria-hidden="true">
                            <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>
</main>
{% endblock %}
