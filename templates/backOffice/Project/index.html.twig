{% extends 'base.html.twig' %}

{% block title %}Projets - Administration{% endblock %}

{% block body %}
<main class="min-h-screen" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <!-- Page Header -->
    <header class="bg-gray-900/80 border-b border-orange-500/30 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(249, 115, 22, 0.2);">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-orange-400" style="text-shadow: 0 0 20px rgba(249, 115, 22, 0.8);">Projets</h1>
                    <p class="mt-1 text-sm text-gray-400">Gérez vos projets réalisés</p>
                </div>
                <a href="{{ path('project.new') }}" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-orange-400 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-orange-500/50 hover:border-orange-400 neon-button">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter un projet
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Projects Section -->
        {% if projects|length > 0 %}
        <section aria-label="Liste des projets">
            <h2 class="sr-only">Vos projets réalisés</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for project in projects %}
                <article class="bg-gray-800/50 rounded-xl border border-orange-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-orange-400/50 group" style="box-shadow: 0 4px 20px rgba(249, 115, 22, 0.2);">
                    <!-- Card Header -->
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(234, 88, 12, 0.2)); border-bottom: 1px solid rgba(249, 115, 22, 0.3);">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                {% if project.customerName %}
                                <h3 class="text-xl font-bold text-orange-400 mb-2 group-hover:text-orange-300 transition-colors" style="text-shadow: 0 0 10px rgba(249, 115, 22, 0.6);">
                                    {{ project.customerName }}
                                </h3>
                                {% else %}
                                <h3 class="text-xl font-bold text-orange-400 mb-2 group-hover:text-orange-300 transition-colors" style="text-shadow: 0 0 10px rgba(249, 115, 22, 0.6);">
                                    Projet #{{ project.id }}
                                </h3>
                                {% endif %}
                                {% if project.technos|length > 0 %}
                                <div class="flex flex-wrap gap-1 mt-2">
                                    {% for techno in project.technos|slice(0, 3) %}
                                    <span class="text-xs px-2 py-1 bg-emerald-500/20 text-emerald-400 rounded border border-emerald-500/30">
                                        {{ techno.name }}
                                    </span>
                                    {% endfor %}
                                    {% if project.technos|length > 3 %}
                                    <span class="text-xs px-2 py-1 bg-gray-700/50 text-gray-400 rounded border border-gray-600">
                                        +{{ project.technos|length - 3 }}
                                    </span>
                                    {% endif %}
                                </div>
                                {% endif %}
                            </div>
                            <div class="ml-4 p-2 rounded-lg" style="background: rgba(249, 115, 22, 0.2); box-shadow: 0 0 10px rgba(249, 115, 22, 0.3);">
                                {% if project.projectImageName %}
                                    <img src="{{ vich_uploader_asset(project, 'projectImageFile') }}" alt="Image du projet" class="w-12 h-12 object-cover rounded-lg">
                                {% else %}
                                    <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                    </svg>
                                {% endif %}
                            </div>
                        </div>
                    </header>

                    <!-- Card Body -->
                    <div class="p-6">
                        <!-- Image Preview -->
                        {% if project.projectImageName %}
                        <div class="mb-4 flex justify-center">
                            <img src="{{ vich_uploader_asset(project, 'projectImageFile') }}" alt="Image du projet" class="w-full h-32 object-cover rounded-lg border border-orange-500/30" style="background: rgba(249, 115, 22, 0.1);">
                        </div>
                        {% endif %}

                        <!-- Description -->
                        {% if project.description %}
                        <p class="text-sm text-gray-400 mb-4 line-clamp-3">
                            {{ project.description }}
                        </p>
                        {% endif %}

                        <!-- Link to Project -->
                        {% if project.linkToProject %}
                        <div class="mb-4 flex items-center text-sm">
                            <a href="{{ project.linkToProject }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-orange-400 hover:text-orange-300 transition-colors">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                                Voir le projet
                            </a>
                        </div>
                        {% endif %}

                        <!-- Difficulties -->
                        {% if project.dificulties %}
                        <div class="mb-4 flex items-start text-sm text-gray-300">
                            <svg class="w-4 h-4 mr-2 text-orange-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            <span class="text-gray-400">{{ project.dificulties }}</span>
                        </div>
                        {% endif %}

                        <!-- Actions -->
                        <nav class="flex items-center space-x-2 pt-4 border-t border-gray-700" aria-label="Actions projet">
                            <a href="{{ path('project.show', {id: project.id}) }}" class="flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-orange-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-orange-500/30 hover:border-orange-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(249, 115, 22, 0.2);">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                Voir
                            </a>
                            <a href="{{ path('project.edit', {id: project.id}) }}" class="flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-orange-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-orange-500/30 hover:border-orange-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(249, 115, 22, 0.2);">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Modifier
                            </a>
                            <form method="post" action="{{ path('project.delete', {id: project.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?');" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                <button type="submit" class="w-full inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-red-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-red-500/30 hover:border-red-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.2);">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Supprimer
                                </button>
                            </form>
                        </nav>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>
        {% else %}
        <!-- Empty State -->
        <section class="text-center py-16" aria-label="Aucun projet">
            <div class="max-w-md mx-auto">
                <div class="mb-6 inline-flex items-center justify-center w-20 h-20 rounded-full" style="background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(234, 88, 12, 0.2)); box-shadow: 0 0 30px rgba(249, 115, 22, 0.4);">
                    <svg class="w-10 h-10 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-orange-400 mb-2" style="text-shadow: 0 0 20px rgba(249, 115, 22, 0.6);">Aucun projet</h2>
                <p class="text-gray-400 mb-6">Commencez par ajouter votre premier projet réalisé</p>
                <a href="{{ path('project.new') }}" class="inline-flex items-center px-6 py-3 text-base font-medium text-orange-400 bg-gray-800/50 hover:bg-gray-800 rounded-lg border border-orange-500/50 hover:border-orange-400 transition-all duration-300 neon-button">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter un projet
                </a>
            </div>
        </section>
        {% endif %}
    </div>
</main>
{% endblock %}

