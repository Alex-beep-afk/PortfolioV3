{% extends 'base.html.twig' %}

{% block title %}Diplômes - Administration{% endblock %}

{% block body %}
<main class="min-h-screen" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <!-- Page Header -->
    <header class="bg-gray-900/80 border-b border-purple-500/30 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-purple-400" style="text-shadow: 0 0 20px rgba(168, 85, 247, 0.8);">Diplômes</h1>
                    <p class="mt-1 text-sm text-gray-400">Gérez vos formations et diplômes</p>
                </div>
                <a href="{{ path('diplomas.new') }}" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-purple-400 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-purple-500/50 hover:border-purple-400 neon-button">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter un diplôme
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Diplomas Section -->
        {% if diplomas|length > 0 %}
        <section aria-label="Liste des diplômes">
            <h2 class="sr-only">Vos diplômes et formations</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for diploma in diplomas %}
                <article class="bg-gray-800/50 rounded-xl border border-purple-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-purple-400/50 group" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
                    <!-- Card Header -->
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(147, 51, 234, 0.2)); border-bottom: 1px solid rgba(168, 85, 247, 0.3);">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-purple-400 mb-2 group-hover:text-purple-300 transition-colors" style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.6);">
                                    {{ diploma.title }}
                                </h3>
                                {% if diploma.school %}
                                <p class="text-sm text-cyan-400 font-medium mb-1">
                                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                    {{ diploma.school }}
                                </p>
                                {% endif %}
                            </div>
                            <div class="ml-4 p-2 rounded-lg" style="background: rgba(168, 85, 247, 0.2); box-shadow: 0 0 10px rgba(168, 85, 247, 0.3);">
                                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14v9M4.5 12.75l6.5 3.5M19.5 12.75l-6.5 3.5"></path>
                                </svg>
                            </div>
                        </div>
                    </header>

                    <!-- Card Body -->
                    <div class="p-6">
                        <!-- Date Range -->
                        <div class="mb-4 flex items-center text-sm text-gray-300">
                            <svg class="w-4 h-4 mr-2 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span class="text-purple-400 font-medium">
                                {{ diploma.dateStart|date('M Y') }}
                            </span>
                            <span class="mx-2 text-gray-500">-</span>
                            <span class="text-purple-400 font-medium">
                                {% if diploma.dateEnd %}
                                    {{ diploma.dateEnd|date('M Y') }}
                                {% else %}
                                    <span class="text-green-400" style="text-shadow: 0 0 10px rgba(34, 197, 94, 0.6);">En cours</span>
                                {% endif %}
                            </span>
                        </div>

                        <!-- Location -->
                        {% if diploma.city %}
                        <div class="mb-4 flex items-center text-sm text-gray-300">
                            <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span class="text-cyan-400">{{ diploma.city }}</span>
                        </div>
                        {% endif %}

                        <!-- Actions -->
                        <nav class="flex items-center space-x-2 pt-4 border-t border-gray-700" aria-label="Actions diplôme">
                            <a href="{{ path('diplomas.edit', {id: diploma.id}) }}" class="flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-purple-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-purple-500/30 hover:border-purple-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(168, 85, 247, 0.2);">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Modifier
                            </a>
                            <form method="post" action="{{ path('diplomas.delete', {id: diploma.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce diplôme ?');" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ diploma.id) }}">
                                <button type="submit" class="w-full inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-red-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-red-500/30 hover:border-red-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.2);">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Supprimer
                                </button>
                            </form>
                        </nav>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>
        {% else %}
        <!-- Empty State -->
        <section class="text-center py-16" aria-label="Aucun diplôme">
            <div class="max-w-md mx-auto">
                <div class="mb-6 inline-flex items-center justify-center w-20 h-20 rounded-full" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(147, 51, 234, 0.2)); box-shadow: 0 0 30px rgba(168, 85, 247, 0.4);">
                    <svg class="w-10 h-10 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14v9M4.5 12.75l6.5 3.5M19.5 12.75l-6.5 3.5"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-purple-400 mb-2" style="text-shadow: 0 0 20px rgba(168, 85, 247, 0.6);">Aucun diplôme</h2>
                <p class="text-gray-400 mb-6">Commencez par ajouter votre premier diplôme ou formation</p>
                <a href="{{ path('diplomas.new') }}" class="inline-flex items-center px-6 py-3 text-base font-medium text-purple-400 bg-gray-800/50 hover:bg-gray-800 rounded-lg border border-purple-500/50 hover:border-purple-400 transition-all duration-300 neon-button">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter un diplôme
                </a>
            </div>
        </section>
        {% endif %}
    </div>
</main>
{% endblock %}

