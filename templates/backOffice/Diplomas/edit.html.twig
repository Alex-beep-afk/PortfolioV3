{% extends 'base.html.twig' %}

{% block title %}Modifier le diplôme - Administration{% endblock %}

{% block body %}
<main class="min-h-screen" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <!-- Page Header -->
    <header class="bg-gray-900/80 border-b border-purple-500/30 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-purple-400" style="text-shadow: 0 0 20px rgba(168, 85, 247, 0.8);">Modifier le diplôme</h1>
                    <p class="mt-1 text-sm text-gray-400">Modifiez les informations de votre diplôme ou formation</p>
                </div>
                <a href="{{ path('diplomas.index') }}" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-gray-300 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-gray-700 hover:border-gray-600">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Retour
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Form Card -->
        <section class="bg-gray-800/50 rounded-xl border border-purple-500/30 backdrop-blur-sm overflow-hidden" style="box-shadow: 0 4px 20px rgba(168, 85, 247, 0.2);">
            <header class="p-6 border-b border-purple-500/30" style="background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(147, 51, 234, 0.2));">
                <h2 class="text-xl font-bold text-purple-400" style="text-shadow: 0 0 10px rgba(168, 85, 247, 0.6);">Informations du diplôme</h2>
            </header>
            
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                {# Champ user caché car défini automatiquement #}
                {% if form.user is defined %}
                    {{ form_widget(form.user, {'attr': {'style': 'display: none;'}}) }}
                {% endif %}
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Title -->
                    <div class="md:col-span-2">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-purple-400 mb-2'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-2 bg-gray-700/50 border border-purple-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-purple-400 focus:ring-2 focus:ring-purple-400/50 transition-all', 'style': 'box-shadow: 0 0 10px rgba(168, 85, 247, 0.1);'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <!-- School -->
                    <div>
                        {{ form_label(form.school, null, {'label_attr': {'class': 'block text-sm font-medium text-cyan-400 mb-2'}}) }}
                        {{ form_widget(form.school, {'attr': {'class': 'w-full px-4 py-2 bg-gray-700/50 border border-cyan-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/50 transition-all', 'style': 'box-shadow: 0 0 10px rgba(6, 182, 212, 0.1);'}}) }}
                        {{ form_errors(form.school) }}
                    </div>

                    <!-- City -->
                    <div>
                        {{ form_label(form.city, null, {'label_attr': {'class': 'block text-sm font-medium text-green-400 mb-2'}}) }}
                        {{ form_widget(form.city, {'attr': {'class': 'w-full px-4 py-2 bg-gray-700/50 border border-green-500/30 rounded-lg text-gray-300 placeholder-gray-500 focus:outline-none focus:border-green-400 focus:ring-2 focus:ring-green-400/50 transition-all', 'style': 'box-shadow: 0 0 10px rgba(34, 197, 94, 0.1);'}}) }}
                        {{ form_errors(form.city) }}
                    </div>

                    <!-- Date Start -->
                    <div>
                        {{ form_label(form.dateStart, null, {'label_attr': {'class': 'block text-sm font-medium text-purple-400 mb-2'}}) }}
                        {{ form_widget(form.dateStart, {'attr': {'class': 'w-full px-4 py-2 bg-gray-700/50 border border-purple-500/30 rounded-lg text-gray-300 focus:outline-none focus:border-purple-400 focus:ring-2 focus:ring-purple-400/50 transition-all', 'style': 'box-shadow: 0 0 10px rgba(168, 85, 247, 0.1);'}}) }}
                        {{ form_errors(form.dateStart) }}
                    </div>

                    <!-- Date End -->
                    <div>
                        {{ form_label(form.dateEnd, null, {'label_attr': {'class': 'block text-sm font-medium text-orange-400 mb-2'}}) }}
                        {{ form_widget(form.dateEnd, {'attr': {'class': 'w-full px-4 py-2 bg-gray-700/50 border border-orange-500/30 rounded-lg text-gray-300 focus:outline-none focus:border-orange-400 focus:ring-2 focus:ring-orange-400/50 transition-all', 'style': 'box-shadow: 0 0 10px rgba(249, 115, 22, 0.1);'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Laissez vide si la formation est en cours</p>
                        {{ form_errors(form.dateEnd) }}
                    </div>
                </div>

                <!-- Form Actions -->
                <nav class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-700" aria-label="Actions du formulaire">
                    <a href="{{ path('diplomas.index') }}" class="px-6 py-2 text-sm font-medium text-gray-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-gray-700 hover:border-gray-600 transition-all duration-300">
                        Annuler
                    </a>
                    <button type="submit" class="px-6 py-2 text-sm font-medium text-purple-400 bg-purple-600/50 hover:bg-purple-600/70 rounded-lg border border-purple-500/50 hover:border-purple-400 transition-all duration-300 neon-button">
                        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Enregistrer les modifications
                    </button>
                </nav>

                {{ form_end(form) }}
            </div>
        </section>
    </div>
</main>
{% endblock %}

