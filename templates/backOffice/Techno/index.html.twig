{% extends 'base.html.twig' %}

{% block title %}Technologies - Administration{% endblock %}

{% block body %}
<main class="min-h-screen" style="background: linear-gradient(to bottom right, #0f172a, #1e293b);">
    <!-- Page Header -->
    <header class="bg-gray-900/80 border-b border-emerald-500/30 backdrop-blur-sm" style="box-shadow: 0 4px 20px rgba(16, 185, 129, 0.2);">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-emerald-400" style="text-shadow: 0 0 20px rgba(16, 185, 129, 0.8);">Technologies</h1>
                    <p class="mt-1 text-sm text-gray-400">Gérez vos technologies et compétences</p>
                </div>
                <a href="{{ path('techno.new') }}" class="inline-flex items-center px-4 py-2 border rounded-lg text-sm font-medium text-emerald-400 bg-gray-800/50 hover:bg-gray-800 transition-all duration-300 border-emerald-500/50 hover:border-emerald-400 neon-button">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter une technologie
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Technos Section -->
        {% if technos|length > 0 %}
        <section aria-label="Liste des technologies">
            <h2 class="sr-only">Vos technologies et compétences</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for techno in technos %}
                <article class="bg-gray-800/50 rounded-xl border border-emerald-500/30 overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-emerald-400/50 group" style="box-shadow: 0 4px 20px rgba(16, 185, 129, 0.2);">
                    <!-- Card Header -->
                    <header class="p-6" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.2)); border-bottom: 1px solid rgba(16, 185, 129, 0.3);">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-emerald-400 mb-2 group-hover:text-emerald-300 transition-colors" style="text-shadow: 0 0 10px rgba(16, 185, 129, 0.6);">
                                    {{ techno.name }}
                                </h3>
                                {% if techno.projects|length > 0 %}
                                <p class="text-sm text-cyan-400 font-medium mb-1">
                                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                    </svg>
                                    {{ techno.projects|length }} projet{{ techno.projects|length > 1 ? 's' : '' }}
                                </p>
                                {% endif %}
                            </div>
                            <div class="ml-4 p-2 rounded-lg" style="background: rgba(16, 185, 129, 0.2); box-shadow: 0 0 10px rgba(16, 185, 129, 0.3);">
                                {% if techno.technoImageName %}
                                    <img src="{{ vich_uploader_asset(techno, 'technoImageFile') }}" alt="{{ techno.name }}" class="w-12 h-12 object-contain rounded-lg">
                                {% else %}
                                    <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                    </svg>
                                {% endif %}
                            </div>
                        </div>
                    </header>

                    <!-- Card Body -->
                    <div class="p-6">
                        <!-- Image Preview -->
                        {% if techno.technoImageName %}
                        <div class="mb-4 flex justify-center">
                            <img src="{{ vich_uploader_asset(techno, 'technoImageFile') }}" alt="{{ techno.name }}" class="w-full h-32 object-contain rounded-lg border border-emerald-500/30" style="background: rgba(16, 185, 129, 0.1);">
                        </div>
                        {% endif %}

                        <!-- Projects Count -->
                        {% if techno.projects|length > 0 %}
                        <div class="mb-4 flex items-center text-sm text-gray-300">
                            <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            <span class="text-cyan-400 font-medium">
                                Utilisée dans {{ techno.projects|length }} projet{{ techno.projects|length > 1 ? 's' : '' }}
                            </span>
                        </div>
                        {% else %}
                        <div class="mb-4 flex items-center text-sm text-gray-400">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            <span>Aucun projet associé</span>
                        </div>
                        {% endif %}

                        <!-- Actions -->
                        <nav class="flex items-center space-x-2 pt-4 border-t border-gray-700" aria-label="Actions technologie">
                            <a href="{{ path('techno.edit', {id: techno.id}) }}" class="flex-1 inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-emerald-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-emerald-500/30 hover:border-emerald-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(16, 185, 129, 0.2);">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Modifier
                            </a>
                            <form method="post" action="{{ path('techno.delete', {id: techno.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette technologie ?');" class="flex-1">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ techno.id) }}">
                                <button type="submit" class="w-full inline-flex items-center justify-center px-3 py-2 text-sm font-medium text-red-400 bg-gray-700/50 hover:bg-gray-700 rounded-lg border border-red-500/30 hover:border-red-400 transition-all duration-300" style="box-shadow: 0 0 10px rgba(239, 68, 68, 0.2);">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Supprimer
                                </button>
                            </form>
                        </nav>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>
        {% else %}
        <!-- Empty State -->
        <section class="text-center py-16" aria-label="Aucune technologie">
            <div class="max-w-md mx-auto">
                <div class="mb-6 inline-flex items-center justify-center w-20 h-20 rounded-full" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(5, 150, 105, 0.2)); box-shadow: 0 0 30px rgba(16, 185, 129, 0.4);">
                    <svg class="w-10 h-10 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-bold text-emerald-400 mb-2" style="text-shadow: 0 0 20px rgba(16, 185, 129, 0.6);">Aucune technologie</h2>
                <p class="text-gray-400 mb-6">Commencez par ajouter votre première technologie ou compétence</p>
                <a href="{{ path('techno.new') }}" class="inline-flex items-center px-6 py-3 text-base font-medium text-emerald-400 bg-gray-800/50 hover:bg-gray-800 rounded-lg border border-emerald-500/50 hover:border-emerald-400 transition-all duration-300 neon-button">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Ajouter une technologie
                </a>
            </div>
        </section>
        {% endif %}
    </div>
</main>

<style>
    .neon-button {
        box-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
    }
    
    .neon-button:hover {
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.6), 0 0 30px rgba(16, 185, 129, 0.4);
    }
</style>
{% endblock %}

